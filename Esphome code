number:
  
  - platform: modbus_controller
    modbus_controller_id: epever
    id: inclination_number
    name: "Kurvehældning"
    address: 0x0000F049
    value_type: U_WORD
    min_value: 25
    max_value: 85
    mode: box
    step: 1
    lambda: "return  x * 0.1; "
    write_lambda: |-
      ESP_LOGD("main","Modbus Number incoming value = %f",x);
      uint16_t c_capacity = x * 10 ;
      payload.push_back(c_capacity);
      return x * 1.0 ;
    ## multiply is ignored because lamdba is used
    multiply: 1
    
  - platform: modbus_controller
    modbus_controller_id: epever
    id: forskydning
    name: "Forskydning"
    address: 0x0000F04D
    value_type: S_WORD
    min_value: -20
    max_value: 20
    mode: box
    step: 1
    lambda: "return  x * 0.1; "
    write_lambda: |-
      ESP_LOGD("main","Modbus Number incoming value = %f",x);
      uint16_t c_capacity = x * 10 ;
      payload.push_back(c_capacity);
      return x * 1.0 ;
    ## multiply is ignored because lamdba is used
    multiply: 1

  

